<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-heart text-danger me-2"></i>Danh sách yêu thích của tôi</h2>
                <a href="/products" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Tiếp tục mua sắm
                </a>
            </div>

            {{! Search bar }}
            <div class="mb-4">
                <form class="d-flex" action="/watchlist/my-watchlist" method="GET">
                    <input name="q" value="{{q}}" class="form-control me-2"
                        placeholder="Tìm kiếm sản phẩm trong danh sách yêu thích...">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    {{#if q}}
                    <a href="/watchlist/my-watchlist" class="btn btn-outline-danger ms-2" title="Xóa tìm kiếm">
                        <i class="fa fa-times"></i>
                    </a>
                    {{/if}}
                </form>
            </div>

            {{#if watchlist.length}}
            <div class="product-grid">
                {{#each watchlist}}
                <div class="card product-card h-100 shadow-sm position-relative">
                    {{! Remove button }}
                    <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 watchlist-remove-btn"
                        data-product-id="{{this.id}}" style="z-index: 10;" title="Xóa khỏi yêu thích">
                        <i class="fas fa-times"></i>
                    </button>

                    <img src="{{this.avatar_url}}" class="card-img-top product-img" alt="{{this.name}}">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="{{this.name}}">{{this.name}}</h5>

                        <div class="mb-2">
                            <span class="h5 text-primary fw-bold">{{this.currentPriceFormatted}}</span>
                            {{#if this.buyNowPrice}}
                            <div class="small text-success"><i class="fas fa-bolt"></i> Mua ngay: {{this.buyNowPrice}}
                            </div>
                            {{/if}}
                        </div>

                        <div class="small text-muted mb-2">
                            <div><i class="fas fa-user-tag"></i> Bidder cao nhất:
                                <strong>{{this.highestBidder}}</strong></div>
                            <div><i class="fas fa-gavel"></i> Lượt đấu: {{this.bidsCount}}</div>
                            <div><i class="far fa-clock"></i> Còn lại: {{this.remainingText}}</div>
                            <div><i class="far fa-calendar-alt"></i> Đăng: {{this.createdAt}}</div>
                            <div><i class="fas fa-arrow-up-short-wide"></i> Giá đề nghị: {{this.suggestedBidFormatted}}
                            </div>
                        </div>

                        {{#if (eq this.status 'ACTIVE')}}
                        <span class="badge bg-success mb-2">Đang đấu giá</span>
                        {{else if (eq this.status 'ENDED')}}
                        <span class="badge bg-secondary mb-2">Đã kết thúc</span>
                        {{else if (eq this.status 'PENDING')}}
                        <span class="badge bg-warning text-dark mb-2">Chờ bắt đầu</span>
                        {{else}}
                        <span class="badge bg-danger mb-2">Đã xóa</span>
                        {{/if}}

                        <div class="mt-auto">
                            <a href="/products/{{this.id}}" class="btn btn-sm btn-outline-primary w-100">
                                <i class="fas fa-eye me-2"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            {{else}}
            <div class="text-center py-5">
                <i class="fas fa-heart-broken fa-5x text-muted mb-4"></i>
                {{#if q}}
                <h4 class="text-muted">Không tìm thấy sản phẩm nào phù hợp với "{{q}}"</h4>
                <p class="text-muted">Thử tìm kiếm với từ khóa khác hoặc <a href="/watchlist/my-watchlist">xem tất cả
                        sản phẩm yêu thích</a></p>
                {{else}}
                <h4 class="text-muted">Chưa có sản phẩm yêu thích nào</h4>
                <p class="text-muted">Hãy thêm sản phẩm vào danh sách yêu thích bằng cách click vào icon <i
                        class="fas fa-heart text-danger"></i></p>
                <a href="/products" class="btn btn-primary mt-3">
                    <i class="fas fa-shopping-bag me-2"></i>Khám phá sản phẩm
                </a>
                {{/if}}
            </div>
            {{/if}}
        </div>
    </div>
</div>

{{! Toast notification }}
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
    <div id="watchlistToast" class="toast align-items-center border-0" role="alert" aria-live="assertive"
        aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<style>
    .watchlist-remove-btn {
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }

    .watchlist-remove-btn:hover {
        opacity: 1;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
    }
</style>

<script>
    // Remove from watchlist
    document.addEventListener('DOMContentLoaded', function () {
        const removeButtons = document.querySelectorAll('.watchlist-remove-btn');
        const toastEl = document.getElementById('watchlistToast');
        const toastMessage = document.getElementById('toastMessage');

        removeButtons.forEach(button => {
            button.addEventListener('click', async function (e) {
                e.preventDefault();

                const productId = this.dataset.productId;
                const card = this.closest('.product-card');

                if (!confirm('Bạn có chắc muốn xóa sản phẩm này khỏi danh sách yêu thích?')) {
                    return;
                }

                try {
                    const response = await fetch(`/watchlist/toggle/${productId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        // Remove card with animation
                        card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                        card.style.opacity = '0';
                        card.style.transform = 'scale(0.8)';

                        setTimeout(() => {
                            card.remove();

                            // Check if no items left
                            const remainingItems = document.querySelectorAll('.watchlist-remove-btn').length;
                            if (remainingItems === 0) {
                                location.reload(); // Reload to show empty state
                            }
                        }, 500);

                        // Show toast
                        toastEl.classList.add('bg-success');
                        toastMessage.textContent = data.message;
                        const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                        toast.show();
                    } else {
                        toastEl.classList.add('bg-danger');
                        toastMessage.textContent = data.message;
                        const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                        toast.show();
                    }

                } catch (error) {
                    console.error('Error removing from watchlist:', error);
                    toastEl.classList.add('bg-danger');
                    toastMessage.textContent = 'Có lỗi xảy ra, vui lòng thử lại!';
                    const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                    toast.show();
                }
            });
        });
    });
</script>