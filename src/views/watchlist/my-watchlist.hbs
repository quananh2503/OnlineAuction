<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-heart text-danger me-2"></i>Danh sách yêu thích của tôi</h2>
                <a href="/products" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Tiếp tục mua sắm
                </a>
            </div>

            {{#if watchlist.length}}
            <div class="product-grid">
                {{#each watchlist}}
                <div class="card product-card h-100 shadow-sm position-relative">
                    {{! Remove button }}
                    <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 watchlist-remove-btn" 
                            data-product-id="{{this.id}}"
                            style="z-index: 10;"
                            title="Xóa khỏi yêu thích">
                        <i class="fas fa-times"></i>
                    </button>

                    <img src="{{this.avatar_url}}" class="card-img-top product-img" alt="{{this.name}}">
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="mb-1">
                            <strong class="text-primary">
                                {{#if this.current_price}}
                                    {{this.current_price}}₫
                                {{else}}
                                    {{this.starting_price}}₫
                                {{/if}}
                            </strong>
                        </p>
                        <p class="mb-2 text-muted small">
                            <i class="fas fa-tag me-1"></i>{{this.category_name}}
                        </p>
                        
                        {{#if (eq this.status 'ACTIVE')}}
                            <span class="badge bg-success mb-2">Đang đấu giá</span>
                        {{else if (eq this.status 'ENDED')}}
                            <span class="badge bg-secondary mb-2">Đã kết thúc</span>
                        {{else if (eq this.status 'PENDING')}}
                            <span class="badge bg-warning text-dark mb-2">Chờ bắt đầu</span>
                        {{else}}
                            <span class="badge bg-danger mb-2">Đã xóa</span>
                        {{/if}}

                        <div class="mt-auto">
                            <a href="/products/{{this.id}}" class="btn btn-sm btn-outline-primary w-100">
                                <i class="fas fa-eye me-2"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            {{else}}
            <div class="text-center py-5">
                <i class="fas fa-heart-broken fa-5x text-muted mb-4"></i>
                <h4 class="text-muted">Chưa có sản phẩm yêu thích nào</h4>
                <p class="text-muted">Hãy thêm sản phẩm vào danh sách yêu thích bằng cách click vào icon <i class="fas fa-heart text-danger"></i></p>
                <a href="/products" class="btn btn-primary mt-3">
                    <i class="fas fa-shopping-bag me-2"></i>Khám phá sản phẩm
                </a>
            </div>
            {{/if}}
        </div>
    </div>
</div>

{{! Toast notification }}
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
    <div id="watchlistToast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<style>
.watchlist-remove-btn {
    opacity: 0.8;
    transition: opacity 0.3s ease;
}

.watchlist-remove-btn:hover {
    opacity: 1;
}

.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
}
</style>

<script>
// Remove from watchlist
document.addEventListener('DOMContentLoaded', function() {
    const removeButtons = document.querySelectorAll('.watchlist-remove-btn');
    const toastEl = document.getElementById('watchlistToast');
    const toastMessage = document.getElementById('toastMessage');
    
    removeButtons.forEach(button => {
        button.addEventListener('click', async function(e) {
            e.preventDefault();
            
            const productId = this.dataset.productId;
            const card = this.closest('.product-card');
            
            if (!confirm('Bạn có chắc muốn xóa sản phẩm này khỏi danh sách yêu thích?')) {
                return;
            }
            
            try {
                const response = await fetch(`/watchlist/toggle/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Remove card with animation
                    card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    card.style.opacity = '0';
                    card.style.transform = 'scale(0.8)';
                    
                    setTimeout(() => {
                        card.remove();
                        
                        // Check if no items left
                        const remainingItems = document.querySelectorAll('.watchlist-remove-btn').length;
                        if (remainingItems === 0) {
                            location.reload(); // Reload to show empty state
                        }
                    }, 500);
                    
                    // Show toast
                    toastEl.classList.add('bg-success');
                    toastMessage.textContent = data.message;
                    const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                    toast.show();
                } else {
                    toastEl.classList.add('bg-danger');
                    toastMessage.textContent = data.message;
                    const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                    toast.show();
                }
                
            } catch (error) {
                console.error('Error removing from watchlist:', error);
                toastEl.classList.add('bg-danger');
                toastMessage.textContent = 'Có lỗi xảy ra, vui lòng thử lại!';
                const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                toast.show();
            }
        });
    });
});
</script>
