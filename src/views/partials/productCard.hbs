<article class="product-card card shadow-sm">
    <img src="{{image}}" class="card-img-top product-img" alt="{{title}}">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title mb-2">{{title}}</h5>
        <p class="mb-1 text-muted small">Giá hiện tại: <strong>{{currentPrice}}₫</strong></p>
        <p class="mb-1 text-muted small">Lượt đấu: <strong>{{bidsCount}}</strong></p>
        <p class="mb-2 remaining-time small text-secondary">Kết thúc: {{remainingText}}</p>
        <div class="mt-auto">
            <a href="/products/{{id}}" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
        </div>
    </div>
</article>