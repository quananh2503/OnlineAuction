<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            {{!-- Header --}}
            <div class="card mb-4">
                <div class="card-body text-center">
                    <h2 class="mb-2">
                        <i class="fas fa-user-circle me-2"></i>
                        {{targetUser.name}}
                    </h2>
                    <span class="badge bg-secondary">{{targetUser.role}}</span>
                </div>
            </div>

            {{!-- Rating Summary --}}
            <div class="row mb-4">
                {{!-- Seller Rating --}}
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <i class="fas fa-store me-2"></i> Đánh giá với tư cách Người bán
                        </div>
                        <div class="card-body text-center">
                            {{#if sellerRating.total}}
                            <div class="display-4 text-primary fw-bold">{{sellerRating.stars}}</div>
                            <p class="text-muted mb-0">{{sellerRating.total}} lượt đánh giá</p>
                            <div class="progress mt-3" style="height: 8px;">
                                <div class="progress-bar bg-success" role="progressbar"
                                    style="width: {{sellerRating.ratio}}%"></div>
                            </div>
                            {{else}}
                            <p class="text-muted mb-0">Chưa có đánh giá</p>
                            {{/if}}
                        </div>
                    </div>
                </div>

                {{!-- Bidder Rating --}}
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-header bg-info text-white">
                            <i class="fas fa-gavel me-2"></i> Đánh giá với tư cách Người mua
                        </div>
                        <div class="card-body text-center">
                            {{#if bidderRating.total}}
                            <div class="display-4 text-info fw-bold">{{bidderRating.stars}}</div>
                            <p class="text-muted mb-0">{{bidderRating.total}} lượt đánh giá</p>
                            <div class="progress mt-3" style="height: 8px;">
                                <div class="progress-bar bg-info" role="progressbar"
                                    style="width: {{bidderRating.ratio}}%"></div>
                            </div>
                            {{else}}
                            <p class="text-muted mb-0">Chưa có đánh giá</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Ratings List --}}
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-star me-2 text-warning"></i>
                        Danh sách đánh giá ({{ratings.length}})
                    </h5>
                </div>
                <div class="card-body p-0">
                    {{#if ratings.length}}
                    <div class="list-group list-group-flush">
                        {{#each ratings}}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <span class="badge {{#if isPositive}}bg-success{{else}}bg-danger{{/if}} me-2">
                                        {{score}}
                                    </span>
                                    <span class="fw-bold">{{rater}}</span>
                                    <span class="badge bg-light text-dark ms-2">
                                        {{#if (eq role "SELLER")}}Người bán{{else}}Người mua{{/if}}
                                    </span>
                                </div>
                                <small class="text-muted">{{date}}</small>
                            </div>
                            <p class="mb-1">{{content}}</p>
                            <small class="text-muted">
                                <i class="fas fa-box me-1"></i>
                                Sản phẩm: <a href="/products/{{productId}}"
                                    class="text-decoration-none">{{productName}}</a>
                            </small>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-star fa-3x mb-3"></i>
                        <p class="mb-0">Chưa có đánh giá nào.</p>
                    </div>
                    {{/if}}
                </div>
            </div>

            {{!-- Back Button --}}
            <div class="mt-4 text-center">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>