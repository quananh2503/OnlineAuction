<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">Danh sách yêu thích</h2>
        <p class="text-muted mb-0">Các sản phẩm bạn đang theo dõi.</p>
    </div>
</div>

{{#if products.length}}
<div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each products}}
    <div class="col">
        <div class="card h-100 shadow-sm">
            <img src="{{image}}" class="card-img-top" alt="{{name}}">
            <div class="card-body d-flex flex-column">
                <div class="small text-muted mb-1">{{category}}</div>
                <h5 class="card-title text-truncate">{{name}}</h5>
                <div class="mb-2">
                    <span class="fw-semibold">{{currentPriceFormatted}}</span>
                    {{#if buyNowPriceFormatted}}
                    <div class="text-success small">Mua ngay: {{buyNowPriceFormatted}}</div>
                    {{/if}}
                </div>
                <div class="text-muted small mb-3">Còn lại: {{endsText}}</div>
                <div class="mt-auto d-grid gap-2">
                    <a href="/products/{{id}}" class="btn btn-outline-primary">Xem chi tiết</a>
                    <form method="POST" action="/watchlist/{{id}}/remove">
                        <button class="btn btn-outline-danger" type="submit">Bỏ yêu thích</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="alert alert-info">Bạn chưa lưu sản phẩm nào.</div>
{{/if}}
