<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-users me-2"></i>Quản lý người dùng</h2>
        </div>

    {{#if success_msg}}
    <div class="alert alert-success alert-dismissible fade show">
        {{success_msg}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {{/if}}

    {{#if error_msg}}
    <div class="alert alert-danger alert-dismissible fade show">
        {{error_msg}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {{/if}}

    {{! Filters }}
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" action="/admin/users" class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" name="search" placeholder="Tìm theo tên, email..." value="{{search}}">
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="role">
                        <option value="">Tất cả vai trò</option>
                        <option value="BIDDER" {{#if (eq role 'BIDDER')}}selected{{/if}}>Bidder</option>
                        <option value="SELLER" {{#if (eq role 'SELLER')}}selected{{/if}}>Seller</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="status">
                        <option value="">Tất cả trạng thái</option>
                        <option value="ACTIVE" {{#if (eq status 'ACTIVE')}}selected{{/if}}>Đang hoạt động</option>
                        <option value="INACTIVE" {{#if (eq status 'INACTIVE')}}selected{{/if}}>Chưa kích hoạt</option>
                        <option value="BANNED" {{#if (eq status 'BANNED')}}selected{{/if}}>Bị khóa</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    {{! Users Table }}
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Điểm</th>
                        <th>Trạng thái</th>
                        <th>Ngày tham gia</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            {{#if (eq this.role 'SELLER')}}
                            <span class="badge bg-success">Seller</span>
                            {{else}}
                            <span class="badge bg-info">Bidder</span>
                            {{/if}}
                        </td>
                        <td>{{this.rating}}</td>
                        <td>
                            {{#if (eq this.status 'ACTIVE')}}
                            <span class="badge bg-success">Hoạt động</span>
                            {{else if (eq this.status 'INACTIVE')}}
                            <span class="badge bg-secondary">Chưa kích hoạt</span>
                            {{else}}
                            <span class="badge bg-danger">Bị khóa</span>
                            {{/if}}
                        </td>
                        <td>{{this.createdAt}}</td>
                        <td>
                            {{#if (eq this.status 'ACTIVE')}}
                            <form action="/admin/users/{{this.id}}/ban" method="POST" style="display: inline;">
                                <button class="btn btn-sm btn-warning" onclick="return confirm('Khóa tài khoản {{this.name}}?')">
                                    <i class="fas fa-ban"></i> Khóa
                                </button>
                            </form>
                            {{else if (eq this.status 'BANNED')}}
                            <form action="/admin/users/{{this.id}}/unban" method="POST" style="display: inline;">
                                <button class="btn btn-sm btn-success" onclick="return confirm('Mở khóa tài khoản {{this.name}}?')">
                                    <i class="fas fa-unlock"></i> Mở khóa
                                </button>
                            </form>
                            {{/if}}
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">Không tìm thấy người dùng nào</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
