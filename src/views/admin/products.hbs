<div class="row">
    <aside class="col-md-3">
        {{> categoryMenu}}
    </aside>
    
    <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-box me-2"></i>Quản lý sản phẩm</h2>
            <div class="d-flex gap-2">
                <span class="badge bg-info fs-6">Tổng: {{total}} sản phẩm</span>
            </div>
        </div>

        {{! Filter & Search }}
        <div class="card mb-4">
            <div class="card-body">
                <form class="row g-3" action="/admin/products" method="GET">
                    <div class="col-md-4">
                        <input name="q" value="{{q}}" class="form-control" placeholder="Tìm kiếm sản phẩm...">
                    </div>
                    <div class="col-md-3">
                        <select name="category" class="form-select">
                            <option value="">-- Tất cả danh mục --</option>
                            {{#each categories}}
                                <option value="{{this.id}}" {{#if (eq ../category this.id)}}selected{{/if}}>
                                    {{this.name}}
                                </option>
                                {{#each this.children}}
                                    <option value="{{this.id}}" {{#if (eq ../../category this.id)}}selected{{/if}}>
                                        &nbsp;&nbsp;└─ {{this.name}}
                                    </option>
                                {{/each}}
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select name="status" class="form-select">
                            <option value="">-- Tất cả trạng thái --</option>
                            <option value="PENDING" {{#if (eq status 'PENDING')}}selected{{/if}}>Chờ bắt đầu</option>
                            <option value="ACTIVE" {{#if (eq status 'ACTIVE')}}selected{{/if}}>Đang đấu giá</option>
                            <option value="ENDED" {{#if (eq status 'ENDED')}}selected{{/if}}>Đã kết thúc</option>
                            <option value="REMOVED" {{#if (eq status 'REMOVED')}}selected{{/if}}>Đã gỡ bỏ</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fa fa-search me-1"></i>Lọc
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {{! Success/Error Messages }}
        {{#if success_msg}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>{{success_msg}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}
        
        {{#if error_msg}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>{{error_msg}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}

        {{! Product Grid }}
        {{#if products.length}}
        <div class="product-grid">
            {{#each products}}
            <article class="card product-card position-relative">
                {{! Status Badge }}
                <div class="position-absolute top-0 start-0 m-2" style="z-index: 10;">
                    {{#if (eq this.status 'ACTIVE')}}
                        <span class="badge bg-success">Đang đấu giá</span>
                    {{else if (eq this.status 'ENDED')}}
                        <span class="badge bg-secondary">Đã kết thúc</span>
                    {{else if (eq this.status 'PENDING')}}
                        <span class="badge bg-warning text-dark">Chờ bắt đầu</span>
                    {{else if (eq this.status 'REMOVED')}}
                        <span class="badge bg-danger">Đã gỡ bỏ</span>
                    {{/if}}
                </div>

                <img src="{{image}}" class="card-img-top product-img" alt="{{title}}">
                
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="mb-1 text-muted small">
                        <i class="fas fa-user me-1"></i>Người bán: {{seller.name}}
                    </p>
                    <p class="mb-1"><strong>{{currentPriceFormatted}}₫</strong></p>
                    {{#if buyNowPrice}}<p class="mb-1 text-success small">Mua ngay: {{buyNowPrice}}₫</p>{{/if}}
                    <p class="mb-1 small text-secondary">
                        <i class="fas fa-tag me-1"></i>{{category}}
                    </p>
                    <p class="mb-1 small">Đăng: {{createdAt}}</p>
                    <p class="mb-1 small">Kết thúc: {{endsAt}}</p>
                    <p class="mb-2 small">Lượt đấu: <strong>{{bidsCount}}</strong></p>
                    
                    <div class="mt-auto d-flex flex-column gap-2">
                        <a class="btn btn-sm btn-outline-primary" href="/products/{{id}}">
                            <i class="fas fa-eye me-1"></i>Xem chi tiết
                        </a>
                        
                        {{#if (ne this.status 'REMOVED')}}
                        <button class="btn btn-sm btn-danger remove-product-btn" 
                                data-product-id="{{id}}" 
                                data-product-name="{{title}}">
                            <i class="fas fa-trash me-1"></i>Gỡ bỏ sản phẩm
                        </button>
                        {{else}}
                        <button class="btn btn-sm btn-secondary" disabled>
                            <i class="fas fa-ban me-1"></i>Đã gỡ bỏ
                        </button>
                        {{/if}}
                    </div>
                </div>
            </article>
            {{/each}}
        </div>

        <!-- Pagination -->
        <nav class="mt-4" aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {{#if (gt page 1)}}
                <li class="page-item">
                    <a class="page-link" href="/admin/products?page={{subtract page 1}}&q={{q}}&category={{category}}&status={{status}}">«</a>
                </li>
                {{/if}}
                
                {{#each (range 1 totalPages)}}
                <li class="page-item {{#ifEquals this ../page}}active{{/ifEquals}}">
                    <a class="page-link" href="/admin/products?page={{this}}&q={{../q}}&category={{../category}}&status={{../status}}">{{this}}</a>
                </li>
                {{/each}}
                
                {{#if (lt page totalPages)}}
                <li class="page-item">
                    <a class="page-link" href="/admin/products?page={{add page 1}}&q={{q}}&category={{category}}&status={{status}}">»</a>
                </li>
                {{/if}}
            </ul>
        </nav>

        {{else}}
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-5x text-muted mb-4"></i>
            <h4 class="text-muted">Không tìm thấy sản phẩm nào</h4>
            <p class="text-muted">Thử thay đổi bộ lọc hoặc từ khóa tìm kiếm</p>
        </div>
        {{/if}}
    </div>
</div>

{{! Modal: Confirm Remove }}
<div class="modal fade" id="removeProductModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="removeProductForm" method="POST">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận gỡ bỏ sản phẩm
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-2">Bạn có chắc chắn muốn gỡ bỏ sản phẩm:</p>
                    <p class="fw-bold fs-5" id="removeProductName"></p>
                    <div class="alert alert-warning mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Sản phẩm sẽ được đánh dấu là REMOVED và không hiển thị cho người dùng nữa.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Gỡ bỏ
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Remove Product Handler
document.addEventListener('DOMContentLoaded', function() {
    const removeButtons = document.querySelectorAll('.remove-product-btn');
    const modal = new bootstrap.Modal(document.getElementById('removeProductModal'));
    const form = document.getElementById('removeProductForm');
    const productNameEl = document.getElementById('removeProductName');
    
    removeButtons.forEach(button => {
        button.addEventListener('click', function() {
            const productId = this.dataset.productId;
            const productName = this.dataset.productName;
            
            productNameEl.textContent = productName;
            form.action = `/admin/products/${productId}/remove`;
            
            modal.show();
        });
    });
    
    // Auto hide alerts
    setTimeout(() => {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000);
});
</script>

<style>
.product-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
}

.remove-product-btn {
    transition: all 0.3s ease;
}

.remove-product-btn:hover {
    transform: scale(1.05);
}
</style>
